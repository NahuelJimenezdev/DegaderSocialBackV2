# ========================================
# Configuraci√≥n de Ejemplo
# Copia este archivo a .env y configura tus valores
# ========================================

# ========== GENERAL ==========
NODE_ENV=development
PORT=3000

# ========== BASE DE DATOS ==========
MONGO_ACCESS=mongodb+srv://usuario:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ========== SEGURIDAD ==========
JWT_SECRET=tu_secreto_jwt_super_seguro_aqui
JWT_EXPIRES_IN=7d

# ========== FRONTEND ==========
FRONTEND_URL=http://localhost:5173

# ========== CORS ==========
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ========== REDIS (Opcional) ==========
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========== UPLOADS ==========
MAX_FILE_SIZE=10485760
# 10MB en bytes
ALLOWED_FILE_TYPES=jpeg,jpg,png,gif,webp,pdf,doc,docx,xls,xlsx

# ========== EMAIL (Opcional) ==========
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
EMAIL_FROM=noreply@degadersocial.com

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW_MS=900000
# 15 minutos en milisegundos
RATE_LIMIT_MAX_REQUESTS=100

# ========== LOGS ==========
LOG_LEVEL=info
# opciones: error, warn, info, debug

# ========== SOCKET.IO ==========
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000
